<div class="row">
  <div class="col-lg-12">
    <div class="card p-3">
      <div class="d-flex justify-content-between">
        <div>
            <%= link_to "New warehouse", new_warehouse_path, class:"btn btn-primary" %>
        </div>
        <div>
            <%== pagy_bootstrap_nav(@pagy) %>
        </div>
        <div>
            <%= search_form_for @q do |w| %>
                <%= w.label :delegacion_cont %>
                <%= w.search_field :delegacion_cont %>
                <%= w.submit class:'btn btn-info' %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<p></p>

<table class= "table_1 table-striped_1">
    <thead class="table-dark_1">
        <th>Id</th>
        <th>Nombre</th>
        <th>Tipo</th>
        <th>Ubicación</th>
        <th>Delegación</th>
        <th>Detalles</th>
        <th>Editar</th>
    </thead>
    <tbody>
        <% @warehouses.each do |w| %>
            <tr>
                <td><%= w.id %></td>
                <td><%= w.nombre %></td>
                <td><%= w.tipo %></td>
                <td><%= w.ubicacion %></td>
                <td><%= w.delegacion %></td>
                <td style="text-align:left;"><%= link_to warehouse_path(w), title: 'Detalles' do %>
                    <i class="ps-6 bi-eye"></i>
                <% end %>
                </td>
                <td style="text-align:left;"><%= link_to edit_warehouse_path(w), title: 'Modificar' do %>
                    <i class="ps-6 bi-pencil"></i>
                <% end %>
                </td>
            </tr>
        
        <% end %>
    </tbody>
</table>