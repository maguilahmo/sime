<div class="row">
    <div class="col-lg-12">
        <div class="card p-3">
            <div class="d-flex justify-content-between">
                <div>
                    <%= link_to "Nueva Transferencia", new_stock_transfer_path, class:'btn btn-primary' %>
                </div>
                <div>
                    <%== pagy_bootstrap_nav(@pagy) %>
                </div>
                <div>
                    <%= search_form_for @q do |f| %>
                        <%= f.label "Insumo" %>
                        <%= f.search_field :suply_descripcion_cont %>
                        <%#= f.label "Origen" %>
                        <%#= f.search_field :warehouse_out_eq %>
                        <%#= f.label "Destino" %>
                        <%#= f.search_field :warehouse_in_eq %>
                        <%= f.label "Responsable" %>
                        <%= f.search_field :user_username_cont %>
                        <%= f.submit "Buscar", class:'btn btn-primary' %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<p></p>
<table class="table table-stripped">
    <thead class="table-dark">
            <th>Id</th>
            <th>Insumo</th>
            <th>Cantidad</th>
            <th>Origen</th>
            <th>Destino</th>
            <th>Responsable</th>
            <th>Detalles</th>
            <th>Editar</th>
    </thead>
    <tbody>
       <% @stock_transfers.each do |st| %>
            <tr>
                <td><%= st.id %></td>
                <td><%= st.suply.descripcion %></td>
                <td><%= st.qty %></td>
                <td><%= st.warehouse.nombre %></td>
                <td><%= st.warehouse.nombre %></td>
                <td><%= st.user.username %></td>
                <td style="text-align:left;"><%= link_to stock_transfer_path(st), title: 'Detalles' do %>
                <i class="ps-6 bi-eye"></i>
                <% end %>
                </td>
                <td style="text-align:left;"><%= link_to edit_stock_transfer_path(st), title: 'Modificar' do %>
                    <i class="ps-6 bi-pencil"></i>
                <% end %>
                </td>
            </tr>
            <% end %>
    </tbody>

</table>