
<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :clock_num %>
    <%= f.input :role %>
    <%= f.input :salary_level %>
    <%= f.input :delegacion %>
    <%= f.input :compensations %>
    <%= f.input :comp_amount %>
    <%= f.input :status %>
    <%= f.input :salary %>
    <%= f.input :labor %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
