<div class="row">
  <div class="col-lg-12">
    <div class="card p-3">
      <div class="d-flex justify-content-between">
        <div>
            <%= link_to "Agregar Empleado", new_employee_path, class:'btn btn-primary' %>
        </div>
        <div>
            <%== pagy_bootstrap_nav(@pagy) %>
        </div>
        <div>
        <%= search_form_for @q do |e| %>
                <%= e.label "Nombre" %>
                <%= e.search_field :name_cont %>
                <%= e.label "Delegación" %>
                <%= e.search_field :delegacion_cont %>
                <%= e.submit class:'btn btn-info' %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<p></p>

<table class="table table-stripped">
    <thead class="table-dark" >
        <th><%= sort_link(@q, :id, default_order: :asc, class:'text-white text-decoration-none') %></th>
        <th><%= sort_link(@q, :name, class:'text-white text-decoration-none') %></th>
        <th>Teléfono</th>
        <th>Checador</th>
        <th>Jornada</th>
        <th><%= sort_link(@q, :delegacion, class:'text-white text-decoration-none') %></th>
        <th>Detalles</th>
        <th>Modificar</th>
    </thead>
    <tbody>
        <% @employees.each do |e| %>
        <tr>
            <td><%= e.id %></td>
            <td><%= e.name %></td>
            <td><%= e.phone %></td>
            <td><%= e.clock_num %></td>
            <td><%= e.labor %></td>
            <td><%= e.delegacion %></td>
            <td style="text-align:left;"><%= link_to employee_path(e), title: 'Detalles' do %>
                <i class="ps-6 bi-eye"></i>
            <% end %>
            </td>
            <td style="text-align:left;"><%= link_to edit_employee_path(e), title: 'Modificar' do %>
                <i class="ps-6 bi-pencil"></i>
            <% end %>
            </td>
        </tr>
<% end %>
    </tbody>
            
</table>