<div class="row">
  <div class="col-lg-12">
    <div class="card p-3">
      <div class="d-flex justify-content-between">
        <div>
            <%= link_to "Agregar Existencia", new_stock_path, class:'btn btn-primary' %>
        </div>
        <div>
            <%== pagy_bootstrap_nav(@pagy) %>
        </div>
        <div>
            <%= search_form_for @q do |st| %>
                <%= st.label "Insumo" %>
                <%= st.search_field :suply_descripcion_cont %>
                <%= st.label "AlmacÃ©n" %>
                <%= st.search_field :warehouse_nombre_cont %>
                <%= st.submit class:'btn btn-info' %>
            <% end %>
      </div>
    </div>
  </div>
</div>
<p></p>

<table class="table table-stripped">
    <thead class="table-dark" >
        <th><%= sort_link(@q, :id, class:'text-white text-decoration-none') %></th>
        <th><%= sort_link(@q, :suply_descripcion, class:'text-white text-decoration-none') %></th>
        <th><%= sort_link(@q, :warehouse_nombre, class:'text-white text-decoration-none') %></th>
        <th>Cantidad</th>
        <th>Detalles</th>
        <th>Modificar</th>
    </thead>
    <tbody>
    <% @stocks.each do |st| %>
        <tr>
            <td><%= st.id %></td>
            <td><%= st.suply.descripcion %></td>
            <td><%= st.warehouse.nombre %></td>
            <td><%= st.qty %></td>
            <td style="text-align:left;"><%= link_to stock_path(st), title: 'Detalles' do %>
                <i class="ps-6 bi-eye"></i>
            <% end %>
            </td>
            <td style="text-align:left;"><%= link_to edit_stock_path(st), title: 'Modificar' do %>
                <i class="ps-6 bi-pencil"></i>
            <% end %>
            </td>
        </tr>
    <% end %>
    </tbody>
            
</table>