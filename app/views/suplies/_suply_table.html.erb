<div class="row">
  <div class="col-lg-12">
    <div class="card p-3">
      <div class="d-flex justify-content-between">
        <div>
            <%= link_to "Crear Insumo", new_suply_path, class:'btn btn-primary' %>
        </div>
        <div>
            <%== pagy_bootstrap_nav(@pagy) %>
        </div>
        <div>
            <%= search_form_for @q do |s| %>
                <%= s.label :descripcion_cont %>
                <%= s.search_field :descripcion_cont %>
                <%= s.label :partida %>
                <%= s.search_field :budget_item_partida_eq %>
                <%= s.submit class:'btn btn-info' %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<p></p>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th><%= sort_link(@q, :id, default_order: :desc, class:'text-white text-decoration-none') %></th>
            <th># Parte</th>
            <th><%= sort_link(@q, :descripcion, class:'text-white text-decoration-none') %></th>
            <th><%= sort_link(@q, :budget_item_partida, class:'text-white text-decoration-none') %></th>
            <th>Precio</th>
            <th>Detalles</th>
            <th>Modificar</th>
        </tr>
    </thead>
    
    <tbody>
    <% @suplies.each do |su| %>
        <tr>
            <td><%= su.id %></td>
            <td><%= su.pn %></td>
            <td><%= su.descripcion %></td>
            <td><%= su.budget_item.partida %></td>
            <th><%= number_to_currency(su.costo_u) %></th>
            <td style="text-align: left"><%= link_to suply_path(su), title: 'Ver Detalle' do %>
                <i class= "fs-6 bi-eye"></i>
            <% end %>
            </td>
            <td style="text-align: left"><%= link_to edit_suply_path(su), title: 'Editar' do %>
                <i class= "fs-6 bi-pencil"></i>
            <% end %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>