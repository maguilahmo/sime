    <div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="sidebar d-lg-block col-md-3 col-xl-2 px-sm-2 px-0 bg-dark_1">
            <%= render 'shared/sidebar' %>
        </div>
        <div class="col py-3">
          <div class="container">
            <%= yield %>
          </div>
        </div>
    </div>
</div>
  <!-- Footer -->
