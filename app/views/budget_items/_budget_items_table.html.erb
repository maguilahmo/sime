<div class="row">
  <div class="col-lg-12">
    <div class="card p-3">
      <div class="d-flex justify-content-between">
        <div>
            <%= link_to "Crear Partida", new_budget_item_path, class:'btn btn-primary' %>
        </div>
        <div>
            <%== pagy_bootstrap_nav(@pagy) %>
        </div>
        <div>
            <%= search_form_for @q do |s| %>
                <%= s.label :partda %>
                <%= s.search_field :partida_eq %>
                <%= s.label :descripcion %>
                <%= s.search_field :descripcion_cont %>
                <%= s.submit class:'btn btn-info' %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<p></p>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Partida</th>
            <th>Descripción</th>
            <th>Monto Disponible</th>
            <th>Última Edición</th>
            <th>Tipo de modificación</th>
            <th>Detalles</th>
            <th>Modificar</th>
        </tr>
    </thead>
    
    <tbody>
    <% @budget_items.each do |bi| %>
        <tr>
            <td><%= bi.id %></td>
            <td><%= bi.partida %></td>
            <td><%= bi.descripcion %></td>
            <td><%= bi.monto_disp %></td>
            <td><%= bi.last_updated %></td>
            <td><%= bi.update_type %></td>
            <td style="text-align: left"><%= link_to budget_item_path(bi), title: 'Ver Detalle' do %>
                <i class= "fs-6 bi-eye"></i>
            <% end %>
            </td>
            <td style="text-align: left"><%= link_to edit_budget_item_path(bi), title: 'Editar' do %>
                <i class= "fs-6 bi-pencil"></i>
            <% end %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>