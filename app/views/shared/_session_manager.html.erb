<% if current_user %>
                <div class="dropdown pb-4">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fs-3 bi bi-person-circle"></i>
                        <span class="d-none d-sm-inline mx-1"><%= current_user.username %></span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                        <li><%= link_to "Editar cuenta", edit_user_registration_path, class:'dropdown-item' %></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><%= button_to "Cerrar sesión", destroy_user_session_path, method: :delete, class: 'dropdown-item' %></li>
                    </ul>
                </div>
                <span>
                    Perfil: <%= current_user.role.to_s.humanize %>
                </span>
<% else %>
    <div class="dropdown pb-4">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fs-3 bi bi-person-circle"></i>
                        <span class="d-none d-sm-inline mx-1">Control de acceso</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                        <li><%= link_to "Iniciar sesión", new_user_session_path, class:'dropdown-item' %></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><%= link_to "Registrar usuario", new_user_registration_path, class: 'dropdown-item' %></li>
                    </ul>
                </div>
<% end %>